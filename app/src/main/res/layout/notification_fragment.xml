<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02AAB0">

    <Button
        android:id="@+id/create_notification_btn"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="143dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/button"
        android:contentDescription="@string/creates_new_notification"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/creates_new_notification"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fragment_number_pass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/fragment_number_pass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:contentDescription="@string/next_page"
        android:focusable="true"
        android:src="@drawable/plus"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="14dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#FFFFFF"
        android:clickable="true"
        android:contentDescription="@string/previous_page"
        android:focusable="true"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="14dp"
        app:srcCompat="@drawable/minus" />

    <TextView
        android:id="@+id/fragment_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_number_pass"
        app:layout_constraintEnd_toStartOf="@+id/plus_btn"
        app:layout_constraintStart_toEndOf="@+id/minus_btn"
        app:layout_constraintTop_toTopOf="@+id/fragment_number_pass" />

</androidx.constraintlayout.widget.ConstraintLayout>